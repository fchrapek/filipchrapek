---
import type { CollectionEntry } from "astro:content";
import Pagination from "@/components/Paginator.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Separator from "@/components/Separator.astro";
import { getAllPosts, getUniqueTags, groupPostsByYear } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
import type { GetStaticPaths, Page } from "astro";
import { Icon } from "astro-icon/components";
import { translations } from "@/i18n/translations";

const t = translations.en.pages.posts;
const pagination = translations.en.pagination;

export const getStaticPaths = (async ({ paginate }) => {
  const MAX_POSTS_PER_PAGE = 10;
  const MAX_TAGS = 7;
  const MAX_PINNED_POSTS = 3;
  const allPosts = await getAllPosts();
  const allPostsByDate = allPosts.sort(collectionDateSort);
  const uniqueTags = getUniqueTags(allPosts).slice(0, MAX_TAGS);
  const pinnedPosts = allPostsByDate
    .filter((p) => p.data.pinned)
    .slice(0, MAX_PINNED_POSTS);
  return paginate(allPostsByDate, {
    pageSize: MAX_POSTS_PER_PAGE,
    props: { uniqueTags, pinnedPosts },
  });
}) satisfies GetStaticPaths;

interface Props {
  page: Page<CollectionEntry<"post">>;
  uniqueTags: string[];
  pinnedPosts: CollectionEntry<"post">[];
}

const { page, uniqueTags, pinnedPosts } = Astro.props;

const meta = {
  description: t.meta.description,
  title: t.meta.title,
};

const paginationProps = {
  ...(page.url.prev && {
    prevUrl: {
      text: pagination.previousPage,
      url: page.url.prev,
    },
  }),
  ...(page.url.next && {
    nextUrl: {
      text: pagination.nextPage,
      url: page.url.next,
    },
  }),
};

const groupedByYear = groupPostsByYear(page.data);
const descYearKeys = Object.keys(groupedByYear).sort((a, b) => +b - +a);
---

<PageLayout meta={meta}>
  <div class="header">
    <h1 class="section-title section-title--large">{t.title}</h1>
    <a class="rss" href="/rss.xml" target="_blank">
      <span class="sr-only">{t.rssFeed}</span>
      <Icon
        aria-hidden="true"
        class="rss-icon"
        focusable="false"
        name="mdi:rss"
      />
    </a>
  </div>
  {
    pinnedPosts.length > 0 && (
      <section class="index-section">
        <h2 class="index-section-title">{t.pinnedPosts}</h2>
        <div class="post-list">
          {pinnedPosts.map((p) => (
            <PostPreview post={p} withArrow />
          ))}
        </div>
      </section>
    )
  }
  {
    descYearKeys.map((yearKey, index) => (
      <>
        {index > 0 && <Separator size="md" border />}
        <section class="index-section">
          <h2 id={`year-${yearKey}`} class="index-section-title">
            <span class="sr-only">{t.postsIn}</span>
            {yearKey}
          </h2>
          <div class="post-list">
            {groupedByYear[yearKey]?.map((p) => (
              <PostPreview post={p} withArrow />
            ))}
          </div>
        </section>
      </>
    ))
  }
  <Pagination {...paginationProps} />
  {
    !!uniqueTags.length && (
      <aside class="tags">
        <h2 class="tags-title">
          {t.tags}
          <svg
            aria-hidden="true"
            class="tags-icon"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M0 0h24v24H0z" fill="none" stroke="none" />
            <path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
            <path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
            <path d="M6 9h-.01" />
          </svg>
        </h2>
        <ul class="tags-list">
          {uniqueTags.map((tag) => (
            <li>
              <a class="tag" href={`/tags/${tag}/`}>
                <span aria-hidden="true">#</span>
                <span class="sr-only">{t.viewAllPostsWithTag}</span>
                {tag}
              </a>
            </li>
          ))}
        </ul>
        <a class="view-all" href="/tags/">
          {t.viewAllTags} <span aria-hidden="true">â†’</span>
          <span class="sr-only">{t.viewAllTagsSr}</span>
        </a>
      </aside>
    )
  }
</PageLayout>

<style>
  .header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-block-end: var(--space-lg);
  }

  .rss {
    color: var(--color-accent);
    text-decoration: none;
  }

  .rss-icon {
    inline-size: 1.5rem;
    block-size: 1.5rem;
  }

  .tags {
    margin-block-start: var(--space-md);
  }

  .tags-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    margin-block-end: var(--space-sm);
    color: var(--color-accent-2);
    font-size: var(--fluid-text-h4);
    font-weight: var(--font-medium);
    line-height: var(--leading-h4);
  }

  .tags-icon {
    inline-size: 1.5rem;
    block-size: 1.5rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .tag {
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: underline;
    text-decoration-color: transparent;
    text-underline-offset: 2px;
    transition:
      text-decoration-color 0.2s ease,
      text-decoration-thickness 0.2s ease;

    &:hover {
      text-decoration-color: var(--color-link);
      text-decoration-thickness: 2px;
    }
  }

  .view-all {
    display: block;
    margin-block-start: var(--space-sm);
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.2s ease;

    &:hover {
      color: var(--color-link);
    }

    @media (min-width: 40rem) {
      text-align: end;
    }
  }
</style>
