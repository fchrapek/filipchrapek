---
import { render } from "astro:content";
import Pagination from "@/components/Paginator.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import { getAllPosts, getTagMeta, getUniqueTags } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
import type { GetStaticPaths, InferGetStaticPropsType } from "astro";
import { Icon } from "astro-icon/components";
import { translations } from "@/i18n/translations";

const t = translations.en.pages.tags;
const pagination = translations.en.pagination;
const breadcrumbs = translations.en.breadcrumbs;

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getAllPosts();
  const sortedPosts = allPosts.sort(collectionDateSort);
  const uniqueTags = getUniqueTags(sortedPosts);

  return uniqueTags.flatMap((tag) => {
    const postsWithTag = sortedPosts.filter((post) =>
      post.data.tags.includes(tag),
    );
    return paginate(postsWithTag, {
      pageSize: 10,
      params: { tag },
    });
  });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page } = Astro.props as Props;
const { tag } = Astro.params;
const tagMeta = await getTagMeta(tag);

const TagContent = tagMeta ? (await render(tagMeta)).Content : null;

const meta = {
  description: tagMeta?.data.description ?? `${t.viewAllPostsWithTag} - ${tag}`,
  title: tagMeta?.data.title ?? `${t.postsAbout} ${tag}`,
};

const paginationProps = {
  ...(page.url.prev && {
    prevUrl: {
      text: pagination.previousTags,
      url: page.url.prev,
    },
  }),
  ...(page.url.next && {
    nextUrl: {
      text: pagination.nextTags,
      url: page.url.next,
    },
  }),
};
---

<PageLayout meta={meta}>
  <nav class="breadcrumbs" aria-label="Breadcrumbs">
    <ul class="breadcrumbs-list">
      <li class="breadcrumbs-item">
        <a class="breadcrumbs-link" href="/tags/">{breadcrumbs.tags}</a>
        <Icon
          aria-hidden="true"
          name="mdi:chevron-right"
          class="breadcrumbs-separator"
        />
      </li>
      <li aria-current="page"><span aria-hidden="true">#</span>{tag}</li>
    </ul>
  </nav>
  <h1
    class="section-title section-title--large"
    style="text-transform: capitalize"
  >
    {tagMeta?.data.title ?? `${t.postsAbout} ${tag}`}
  </h1>
  <div class="prose prose--sm" style="margin-block-end: var(--space-500)">
    {tagMeta?.data.description && <p>{tagMeta.data.description}</p>}
    {TagContent && <TagContent />}
  </div>
  <ul class="list">
    {
      page.data.map((p) => (
        <li class="list-item">
          <PostPreview as="h2" post={p} />
        </li>
      ))
    }
  </ul>
  <Pagination {...paginationProps} />
</PageLayout>

<style>
  .breadcrumbs {
    margin-block-end: var(--space-md);
  }

  .breadcrumbs-list {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .breadcrumbs-item {
    display: flex;
    align-items: center;
  }

  .breadcrumbs-link {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;

    &:hover {
      color: var(--color-link);
    }
  }

  .breadcrumbs-separator {
    margin-inline: var(--space-xs);
  }
</style>
