---
import PageLayout from "@/layouts/Base.astro";
import { content } from "@/data/content";

const { about } = content;
---

<PageLayout meta={about.meta}>
  <h1
    class="section-title section-title--large"
    style="margin-block-end: var(--space-md)"
  >
    {about.title}
  </h1>
  <div class="prose prose--sm" set:html={about.content} />
</PageLayout>
