---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@/components/FormattedDate.astro";
import { siteConfig } from "@/site.config";
import { getLang } from "@/utils/i18n";

interface Props {
  content: CollectionEntry<"post">;
  readingTime: string;
}

const {
  content: { data },
  readingTime,
} = Astro.props;

const lang = getLang(siteConfig.lang);
const labels = {
  en: {
    draft: "(Draft)",
    updated: "Updated:",
    viewMore: "View more blogs with the tag",
  },
  pl: {
    draft: "(Szkic)",
    updated: "Aktualizacja:",
    viewMore: "Zobacz więcej artykułów z tagiem",
  },
};

const dateTimeOptions: Intl.DateTimeFormatOptions = {
  month: "long",
};
---

{
  data.coverImage && (
    <div class="cover">
      <Image
        alt={data.coverImage.alt}
        layout="constrained"
        width={748}
        height={420}
        priority
        src={data.coverImage.src}
      />
    </div>
  )
}
{data.draft ? <span class="draft-label">{labels[lang].draft}</span> : null}
<h1 class="title">
  {data.title}
</h1>
<div class="meta">
  <p class="date">
    <FormattedDate date={data.publishDate} dateTimeOptions={dateTimeOptions} /> /{
      " "
    }
    {readingTime}
  </p>
  {
    data.updatedDate && (
      <span class="updated">
        {labels[lang].updated}
        <FormattedDate
          class="updated-date"
          date={data.updatedDate}
          dateTimeOptions={dateTimeOptions}
        />
      </span>
    )
  }
</div>
{
  !!data.tags?.length && (
    <div class="tags">
      <svg
        aria-hidden="true"
        class="tags-icon"
        fill="none"
        focusable="false"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M0 0h24v24H0z" fill="none" stroke="none" />
        <path d="M7.859 6h-2.834a2.025 2.025 0 0 0 -2.025 2.025v2.834c0 .537 .213 1.052 .593 1.432l6.116 6.116a2.025 2.025 0 0 0 2.864 0l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-6.117 -6.116a2.025 2.025 0 0 0 -1.431 -.593z" />
        <path d="M17.573 18.407l2.834 -2.834a2.025 2.025 0 0 0 0 -2.864l-7.117 -7.116" />
        <path d="M6 9h-.01" />
      </svg>
      {data.tags.map((tag, i) => (
        <>
          {/* prettier-ignore */}
          <span class="tag">
						<a class="tag-link" data-pagefind-filter={`tag:${tag}`} href={`/tags/${tag}/`}><span class="sr-only">{labels[lang].viewMore}&nbsp;</span>{tag}
						</a>{i < data.tags.length - 1 && ", "}
					</span>
        </>
      ))}
    </div>
  )
}

<style>
  .cover {
    aspect-ratio: 16 / 9;
    margin-block-end: var(--space-sm);
  }

  .draft-label {
    color: var(--color-red-500);
    font-size: var(--text-base);
  }

  .title {
    color: var(--color-accent-2);
    font-size: var(--fluid-text-h2);
    font-weight: var(--font-medium);
    line-height: var(--leading-h2);
  }

  .meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm) var(--space-xs);
  }

  .date {
    font-weight: var(--font-medium);
  }

  .updated {
    padding: var(--space-xs);
    border-radius: 0.5rem;
    background-color: color-mix(in srgb, var(--color-quote) 5%, transparent);
    color: var(--color-quote);
  }

  :global(.updated-date) {
    margin-inline-start: var(--space-xs);
  }

  .tags {
    margin-block-start: var(--space-xs);
  }

  .tags-icon {
    display: inline-block;
    inline-size: 1.5rem;
    block-size: 1.5rem;
    vertical-align: middle;
  }

  .tag {
    display: contents;
  }

  .tag-link {
    display: inline-block;
    text-decoration: underline;
    text-decoration-color: transparent;
    text-underline-offset: 2px;
    transition:
      text-decoration-color 0.2s ease,
      text-decoration-thickness 0.2s ease;

    &::before {
      content: "#";
    }

    &:hover {
      text-decoration-color: var(--color-link);
      text-decoration-thickness: 2px;
    }
  }
</style>
