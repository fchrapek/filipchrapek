---
import Search from "@/components/Search.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";
import DesktopNav from "./DesktopNav.astro";
import MobileNav from "./MobileNav.astro";
import { siteConfig } from "@/site.config";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class:list={["header", className]} id="main-header">
  <div class="brand">
    <a
      aria-current={Astro.url.pathname === "/" ? "page" : false}
      class="logo-link"
      href="/"
    >
      <span class="logo-text">{siteConfig.title}</span>
    </a>
    <DesktopNav class="desktop-nav" />
  </div>
  <div class="actions">
    <Search />
    <ThemeToggle />
    <MobileNav class="mobile-nav" />
  </div>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-block-end: var(--space-lg);
  }

  .brand {
    display: flex;

    @media (min-width: 40rem) {
      flex-direction: column;
    }
  }

  .logo-link {
    display: inline-flex;
    align-items: center;
    transition: opacity 0.2s ease;

    &:hover {
      opacity: 0.8;
    }

    @media (min-width: 40rem) {
      position: relative;
      display: inline-block;
    }
  }

  .logo-text {
    font-size: var(--fluid-text-h3);
    font-weight: var(--font-medium);
    line-height: var(--leading-h3);

    @media (min-width: 40rem) {
      position: absolute;
      inline-size: 1px;
      block-size: 1px;
      margin: -1px;
      padding: 0;
      overflow: hidden;
      border-width: 0;
      white-space: nowrap;
      clip: rect(0, 0, 0, 0);
    }
  }

  .actions {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--space-xs);
  }

  .mobile-nav {
    @media (min-width: 40rem) {
      display: none;
    }
  }
</style>
