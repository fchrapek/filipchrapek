---
/**
 * IndexHero - Special hero component for the index page only
 * Combines profile image, header, and hero content in a unique layout
 */
import ProfileImage from "@/components/ProfileImage.astro";
import Header from "@/components/layout/Header.astro";
import { content } from "@/data/content";
import type { ImageMetadata } from "astro";

interface Props {
  profileImage: ImageMetadata;
}

const { profileImage } = Astro.props;
const { hero } = content;
---

<div class="index-hero">
  <Header class="index-hero__header" />
  <h1 class="index-hero__title">{hero.title}</h1>
  <ProfileImage
    class="index-hero__profile-image"
    src={profileImage}
    alt={hero.profileAlt}
  />
  <div class="index-hero__intro prose prose--dimmed" set:html={hero.intro} />
</div>
